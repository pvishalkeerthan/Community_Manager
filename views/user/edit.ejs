<%-include("../includes/navbar.ejs")%>
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
  crossorigin="anonymous"
/>
<!-- <link rel="stylesheet" href="/css/signup.css"> -->

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Edit Profile</h1>
          <form action="/user/<%=user._id%>?_method=PUT" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input name="user[username]" id="username" value="<%=user.username%>" type="text" class="form-control" required>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Username is required</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input name="user[email]" id="email" value="<%=user.email%>" type="email" class="form-control" required>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Email is required</div>
            </div>
            <div class="mb-3">
              <label for="flatno" class="form-label">Flat Number</label>
              <input name="user[flatno]" id="flatno" value="<%=user.flatno%>" class="form-control" required>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Flat number is required</div>
            </div>
            <div class="mb-3">
              <label for="phno" class="form-label">Phone Number</label>
              <input name="user[phno]" id="phno" value="<%=user.phno%>" type="tel" class="form-control" required>
              <div class="invalid-feedback">Phone number is not valid</div>
            </div>
            <button class="btn btn-success btn-block">Add Changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
