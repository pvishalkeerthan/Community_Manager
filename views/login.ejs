<link rel="stylesheet" href="\css\login.css" />
<div class="login body">
  <h1 class="loginheading">Login on Community</h1>
  <div class="card login-card">
    <form
      action="/login"
      method="POST"
      class="needs-validation form"
      novalidate
    >
      <div class="mb-3" id="Username">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="usernameinput"
          placeholder="Type a username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">username is neccessary</div>
      </div>

      <div class="mb-3 password">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="passwordinput"
          placeholder="Enter password"
          type="password"
          class="form-control"
          required
        />

        <div class="invalid-feedback">password is not valid</div>
      </div>
      <p>Doesn't have a account <a href="/signup">Sign up</a></p>
      <button class="btn btn-success loginbutton">Login</button>
    </form>
  </div>
</div>
