<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/css/signup.css">
<div class="signup row mt-4 body">
    <h1 class="center" style="text-align: center;">SignUp on Community</h1>
    <div class="col-8 offset-4 card">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">Username</lable>
            <input name="username" id="username" placeholder="Type a username" type="text" class="form-control" required >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">username is neccessary</div>
            </div>
            <div class="mb-3 ">
                <lable for="email" class="form-label email">Email</lable>
            <input name="email" id="email" placeholder="Type a email" type="email" class="form-control" required >
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">email is neccessary</div>
            </div>
            <div class="mb-3 password">
                <lable for="password" class="form-label">Password</lable>
            <input name="password" id="password" placeholder="Enter password" type="password" class="form-control" required >
            
            <div class="invalid-feedback">password is not valid </div>
            </div>
            <div class="mb-3 phone">
                <lable for="phno" class="form-label">Phone No</lable>
            <input name="phno" id="phno" placeholder="Enter phone number" type="tel" class="form-control" required >
            
            <div class="invalid-feedback">password is not valid </div>
            </div>
            <button class="btn">SignUp</button>
        </form>
    </div>
    </div>