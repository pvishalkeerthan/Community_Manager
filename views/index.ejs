<% layout("/layouts/boilerplate")-%>
<body class="bg-light">
  <style>
    .card-img-top {
      height: 200px; /* Set a fixed height for the images */
      object-fit: contain; /* Ensure the entire image fits within the container */
    }
  </style>
  <div class="container py-5">
    <h1 class="text-center mb-5">Discover Communities</h1>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for(let community of allCommunity) { %>
      <div class="col">
        <div class="card border-0 shadow h-100">
          <img
            src="<%= community.image %>"
            class="card-img-top"
            alt="community_image"
          />
          <div class="card-body">
            <h5 class="card-title mb-3"><%= community.name %></h5>
            <p class="card-text text-muted"><%= community.description %></p>
            <p><%=community.price%></p>
            <ul class="list-unstyled mb-0">
              <li class="mb-2">
                <i class="bi bi-people-fill pe-2"></i>Residents: <%=
                community.resident.length %>
              </li>
              <li>
                <i class="bi bi-geo-alt-fill pe-2"></i><%= community.country %>,
                <%= community.location %>
              </li>
            </ul>
          </div>
          <div class="card-footer bg-transparent border-0 text-center">
            <a
              href="/community/<%= community._id %>"
              class="btn btn-primary btn-sm stretched-link"
              >Explore</a
            >
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</body>
