<link rel="stylesheet" href="\css\login.css" />
<div class="login row mt-4 body">
  <h1 class="main-heading" style="text-align: center">SignUp on Community</h1>
  <div class="card login-card">
    <form
      action="/signup"
      method="POST"
      class="needs-validation form center"
      novalidate
    >
      <div class="mb-3">
        <lable for="username" class="form-label">Username</lable>
        <input
          name="username"
          id="username"
          placeholder="Type a username"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">username is neccessary</div>
      </div>
      <div class="mb-3">
        <lable for="email" class="form-label email">Email</lable>
        <input
          name="email"
          id="email"
          placeholder="Type a email"
          type="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">email is neccessary</div>
      </div>
      <div class="mb-3">
        <lable for="flatno" class="form-label flatno">Enter FlatNo:</lable>
        <input
          name="flatno"
          id="flatno"
          placeholder="Type Flat No"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Flat No is neccessary</div>
      </div>
      <div class="mb-3 password">
        <lable for="password" class="form-label">Password</lable>
        <input
          name="password"
          id="password"
          placeholder="Enter password"
          type="password"
          class="form-control"
          required
        />

        <div class="invalid-feedback">password is not valid</div>
      </div>
      <div class="mb-3 phone">
        <lable for="phno" class="form-label">Phone No</lable>
        <input
          name="phno"
          id="phno"
          placeholder="Enter phone number"
          type="tel"
          class="form-control"
          required
        />

        <div class="invalid-feedback">password is not valid</div>
      </div>
      <p>Already a member? <a href="/login">login</a></p>
      <button class="btn btn-success">SignUp</button>
    </form>
  </div>
</div>
